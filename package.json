{
  "name": "nodejs-test",
  "private": true,
  "scripts": {
    "dev": "node server.js",
    "check-all": "npm run format-code && npm run lint-styles && npm run lint-scripts",
    "format-code": "prettier --check --write \"public/**\"",
    "lint-styles": "stylelint \"public/styles/**/*.css\" --fix",
    "lint-scripts": "eslint \"public/scripts/**/*.js\" --fix"
  },
  "devDependencies": {
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.1",
    "live-server": "^1.1.0",
    "prettier": "^2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-prettier": "^2.0.0"
  },
  "dependencies": {
    "node": "^18.9.1",
    "node.js": "^0.0.1-security",
    "npm": "^8.19.2"
  }
}
